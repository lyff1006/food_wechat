/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.ab_center_horizon{
  position:absolute;
  left:50%;
  transform:translateX(-50%);
}
.all_center_re{
	position: relative;
	top: 50%;
	left:50%;
	transform: translate(-50%,-50%);
}
.all_center_ab{
	position: absolute;
	top: 50%;
	left:50%;
	transform: translate(-50%,-50%);
}
.left_center_re{
	position: relative;
	left: 50%;
	transform: translateX(-50%);
}
.left_center_ab{
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
}
.top_center_re{
	position: relative;
	top: 50%;
	transform: translateY(-50%);
}
.top_center_ab{
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
}
.color-red{
	color: #FF4040;
}
.color-blue{
	color: #2d78f4;
}