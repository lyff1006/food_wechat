.scroll-box{display: flex;flex-wrap: nowrap;}
.menu-tab{
  width: 180rpx;
  text-align: center;
  height: 100%;
  color: #666;
  border-right:1rpx solid #999
  
}
.item-tab{
  font-size:16px;
  padding:8rpx;
}
.cont-box{
  border-top: 1px solid #999;
  box-sizing: border-box;
  padding: 20rpx;
  overflow: hidden;
}
.cont-box text{
  font-size: 28px;
  color: #26a8ff;
}
.item-act{
  background: linear-gradient(to bottom right, #00e5ee, #26a8ff);
  color: #fff;
  height: 60rpx;
  font-size: 20px;
}



.fl_main_list_one{
	float: left;
	width: 33.3%;
	padding: 0 0.6rem;
	box-sizing: border-box;
	text-align: center;
	overflow: hidden;
}
.fl_main_list_img{
	width: 100%;
}
.fl_main_list_img image{
	width: 100%;
}
.fl_main_list_text{
  font-size: 16px;
  color: #888;
	width: 100%;
	display: inline-block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}